types = {
	type[special_project] = {
		name_field = "key"
		path = "game/common/special_projects"

		subtype[cost] = {
			cost = int[1..9999999]
		}
	}
}


special_project = {
	key = localisation
	## cardinality = 0..1
	cost = int
	## cardinality = 0..1
	cost = {
		base = int
		alias_name[scaled_modifier_rule] = alias_match_left[scaled_modifier_rule]
